<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTitle"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Title"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="#8BC34A"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/editContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0"
                android:background="@null"
                android:ems="10"
                android:hint="Content"
                android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                android:scrollHorizontally="false"
                android:textAlignment="viewStart" />
        </LinearLayout>
    </ScrollView>

    <HorizontalScrollView
        android:id="@+id/scrollView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="mood"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_1172122" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="smile"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_happy_smile_1172131" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="happy"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_smile_happy_successful_1172129" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="successful"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_happy_smile_successful_1172130" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="tounge"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_happy_joke_tounge_1172119" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="lovely"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_love_lovely_1172127" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="sad"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_sad_1172128" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="tear"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_sad_tear_1172125" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="crying"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_sad_crying_1172126" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="angry"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_angry_upset_1172121" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="ill"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_sick_ill_trouble_1172124" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="dead"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_mood_emoji_crash_bug_dead_1172120" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                android:layout_weight="0"
                android:contentDescription="@string/app_name"
                android:onClick="moodClicked"
                android:tag="tired"
                app:srcCompat="@drawable/iconfinder_android_robot_mobile_sleeping_tired_1172123" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0"
        android:onClick="submitEntryClicked"
        android:text="Submit Entry!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>